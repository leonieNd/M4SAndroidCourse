<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.lonie.ndoyebandiareleoniemidterm.MainActivityFragment"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:columnCount="6"
        android:rowCount="13"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center">

        <EditText
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/milesValue"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="miles ="
        android:id="@+id/milestext"
        android:layout_alignTop="@+id/kmValue"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="15dp" />

        <TextView
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/kmValue"
        android:layout_row="2"
        android:layout_column="3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convert Miles into Kilometers"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="6"
            android:textSize="20dp"
            android:layout_gravity="bottom" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/km"
        android:id="@+id/kmtext"
        android:layout_row="2"
        android:layout_column="4"
        android:textSize="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:layout_row="5"
            android:layout_column="2"
            android:text="Convert"
            android:layout_gravity="center_horizontal" />

    </GridLayout>


</LinearLayout>
